<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="io.dbc.github.sninventory.controller.LoginController">
   <children>
      <VBox alignment="CENTER" layoutX="1.0" layoutY="1.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="username">
                     <font>
                        <Font size="27.0"/>
                     </font>
                  </Label>
                  <TextField fx:id="usernameTextField">
                     <HBox.margin>
                        <Insets left="8.0"/>
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="password">
                     <font>
                        <Font size="27.0"/>
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField">
                     <HBox.margin>
                        <Insets left="8.0"/>
                     </HBox.margin>
                  </PasswordField>
               </children>
            </HBox>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Login"/>
         </children>
      </VBox>
   </children>
</AnchorPane>
