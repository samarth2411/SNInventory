<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="io.dbc.github.sninventory.controller.ProductDetailsController">
    <TableView fx:id="productDetailsTable" prefHeight="363.0" prefWidth="600.0">
        <columns>
            <TableColumn fx:id="productNameColumn" prefWidth="145.0" text="Product Name"/>
            <TableColumn fx:id="priceColumn" prefWidth="128.0" text="Price"/>
            <TableColumn fx:id="quantityColumn" prefWidth="141.0" text="Quantity"/>
            <TableColumn fx:id="descriptionColumn" prefWidth="185.0" text="Description"/>
        </columns>
    </TableView>
    <HBox alignment="BOTTOM_RIGHT" layoutY="363.0" prefHeight="37.0" prefWidth="602.0">
        <Button fx:id="addNewProductButton" alignment="BOTTOM_LEFT" mnemonicParsing="false"
                onAction="#onAddNewProductButtonClick" prefHeight="44.0" prefWidth="187.0" text="Add New Product">
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
    </HBox>
</AnchorPane>
